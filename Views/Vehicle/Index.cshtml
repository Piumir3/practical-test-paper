@model List<WebApplicationNefc.Models.Vehicle>
@{
}

<h1>Vehicles List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Registration Number</th>
            <th>Model Name</th>
            <th>Number Of Seats</th>
            <th>Colors </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model.OrderBy(v => v.ModelName))
        {
            <tr>
                <td>@vehicle.RegNo</td>
                <td>@vehicle.ModelName</td>
                <td>@vehicle.NumSeats</td>
                <td>
                    @if (vehicle.IsSingleColor)
                    {
                        @vehicle.Colors?.FirstOrDefault()?.ColorName
                    }
                    else
                    {
                        @string.Join(", ", vehicle.Colors?.Select(c => c.ColorName) ?? new List<string>())
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
